                    <td class="volume-cell">{kw.volume.toLocaleString()}</td>
                    <td><span class="kd-badge easy">{kw.difficulty}</span></td>
                    <td>{kw.traffic_potential.toLocaleString()}</td>
                    <td class="strategy-cell">{kw.strategy}</td>
