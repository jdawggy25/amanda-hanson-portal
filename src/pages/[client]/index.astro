---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import DocCard from '../../components/DocCard.astro';
import Charts from '../../components/Charts.astro';

export async function getStaticPaths() {
  // Define available clients
  const CLIENTS = ['v3', 'casita', 'bnc-builders'];

  return CLIENTS.map(client => ({
    params: { client },
  }));
}

const { client } = Astro.params;

// Import client-specific metrics
const metricsModule = await import(`../../data/${client}-metrics.json`);
const metricsData = metricsModule.default;

// Get all docs for this client
const allDocs = await getCollection('docs');

// Separate docs by directory (docs/ vs dev/)
const clientCategoryDocs = allDocs.filter(doc => doc.slug.startsWith(`${client}/docs/`));
const developerCategoryDocs = allDocs.filter(doc => doc.slug.startsWith(`${client}/dev/`));

// Sort docs alphabetically by slug
const sortedClientDocs = clientCategoryDocs.sort((a, b) => a.slug.localeCompare(b.slug));
const sortedDeveloperDocs = developerCategoryDocs.sort((a, b) => a.slug.localeCompare(b.slug));

// Helper to extract title from slug
function formatTitle(slug: string): string {
  // Remove client prefix and docs/dev directory from slug
  const withoutClient = slug.replace(`${client}/docs/`, '').replace(`${client}/dev/`, '');
  return withoutClient
    .replace(/_/g, ' ')
    .replace(/-/g, ' ')
    .replace(/\b\w/g, c => c.toUpperCase());
}

const { keywords, traffic, backlinks } = metricsData;
// Handle issues being at root level or nested under technicalSeo
const issues = metricsData.issues || metricsData.technicalSeo?.issues || { total: 0, critical: 0, warnings: 0, notices: 0 };
const clientName = metricsData.client.name;
---

<BaseLayout title={`${clientName} SEO Reports`}>
  <main class="main">
    <div class="container">
      <header class="hero">
        <div class="hero-content">
          <div class="brand-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 16v-4"></path>
              <path d="M12 8h.01"></path>
            </svg>
            Powered by Comcreate
          </div>
          <h1 class="page-title">{clientName} SEO Reports</h1>
          <div class="hero-divider"></div>
          <p class="page-tagline">
            Data-driven insights. Actionable strategies. Real results.
          </p>
          <p class="page-description">
            Comprehensive SEO analysis and recommendations designed to ignite your digital growth.
          </p>
        </div>
      </header>

      <!-- Stats Grid -->
      <div class="stats-grid">
        <div class="stat-card animate-fade-in">
          <div class="stat-label">Keywords Tracked</div>
          <div class="stat-value">{keywords.total}</div>
          <div class={`stat-change ${typeof keywords.change === 'number' && keywords.change >= 0 ? 'positive' : 'negative'}`}>
            {keywords.changePercent} from last month
          </div>
        </div>
        <div class="stat-card animate-fade-in" style="animation-delay: 50ms">
          <div class="stat-label">Monthly Traffic</div>
          <div class="stat-value">{typeof traffic.monthly === 'number' ? `${(traffic.monthly / 1000).toFixed(1)}k` : traffic.monthly}</div>
          <div class={`stat-change ${typeof traffic.change === 'number' && traffic.change >= 0 ? 'positive' : 'negative'}`}>
            {traffic.changePercent} from last month
          </div>
        </div>
        <div class="stat-card animate-fade-in" style="animation-delay: 100ms">
          <div class="stat-label">Backlinks</div>
          <div class="stat-value">{backlinks.total}</div>
          <div class={`stat-change ${typeof backlinks.change === 'number' && backlinks.change >= 0 ? 'positive' : 'negative'}`}>
            {backlinks.changePercent} from last month
          </div>
        </div>
        <div class="stat-card animate-fade-in" style="animation-delay: 150ms">
          <div class="stat-label">Issues Found</div>
          <div class="stat-value">{issues.total}</div>
          <div class="stat-change">
            {issues.critical} critical · {issues.warnings} warnings
          </div>
        </div>
      </div>

      <!-- Charts Section -->
      <Charts client={client} />

      <!-- Keywords Ranking Table -->
      {keywords.ranking && keywords.ranking.length > 0 && (
        <div class="keywords-section">
          <div class="section-header">
            <span class="label-mono-accent">Target Keywords</span>
          </div>
          <div class="keywords-table-wrapper">
            <table class="keywords-table">
              <thead>
                <tr>
                  <th>Keyword</th>
                  <th>Position</th>
                  <th>Change</th>
                  <th>Volume</th>
                  {keywords.ranking[0].difficulty !== undefined && <th>Difficulty</th>}
                  {keywords.ranking[0].priority !== undefined && <th>Priority</th>}
                </tr>
              </thead>
              <tbody>
                {keywords.ranking.map((kw: any) => (
                  <tr>
                    <td class="keyword-name">{kw.keyword}</td>
                    <td class="keyword-position">
                      {kw.position === 'N/A' ? (
                        <span class="badge badge-na">N/A</span>
                      ) : (
                        <span class={`badge badge-position ${kw.position <= 3 ? 'badge-top3' : kw.position <= 10 ? 'badge-top10' : 'badge-other'}`}>
                          #{kw.position}
                        </span>
                      )}
                    </td>
                    <td class="keyword-change">
                      {kw.change === 'N/A' || kw.change === 0 ? (
                        <span class="change-neutral">—</span>
                      ) : kw.change > 0 ? (
                        <span class="change-positive">↑ {kw.change}</span>
                      ) : (
                        <span class="change-negative">↓ {Math.abs(kw.change)}</span>
                      )}
                    </td>
                    <td class="keyword-volume">{typeof kw.volume === 'number' ? kw.volume.toLocaleString() : kw.volume}</td>
                    {kw.difficulty !== undefined && (
                      <td class="keyword-difficulty">
                        {kw.difficulty === 'N/A' ? (
                          <span class="badge badge-na">N/A</span>
                        ) : (
                          <span class={`badge ${kw.difficulty <= 30 ? 'badge-easy' : kw.difficulty <= 60 ? 'badge-medium' : 'badge-hard'}`}>
                            {kw.difficulty}
                          </span>
                        )}
                      </td>
                    )}
                    {kw.priority !== undefined && (
                      <td class="keyword-priority">
                        <span class={`badge ${
                          kw.priority.includes('P0') || kw.priority.includes('GOLDMINE') || kw.priority.includes('CRITICAL') ? 'badge-critical' :
                          kw.priority.includes('P1') || kw.priority.includes('HIGH') ? 'badge-high' :
                          kw.priority.includes('LOCAL') ? 'badge-local' :
                          'badge-medium'
                        }`}>
                          {kw.priority}
                        </span>
                      </td>
                    )}
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      )}

      <!-- Reports Section -->
      <div class="section-header">
        <span class="label-mono-accent">Available Reports</span>
      </div>

      <!-- Category Tabs -->
      <div class="tabs-container">
        <div class="tabs">
          <button class="tab active" data-tab="client">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
            Client Reports
            <span class="tab-count">{sortedClientDocs.length}</span>
          </button>
          <button class="tab" data-tab="developer">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="16 18 22 12 16 6"></polyline>
              <polyline points="8 6 2 12 8 18"></polyline>
            </svg>
            Developer Docs
            <span class="tab-count">{sortedDeveloperDocs.length}</span>
          </button>
        </div>
      </div>

      <!-- Client Reports Grid -->
      <div class="doc-grid" data-category="client">
        {sortedClientDocs.map((doc) => (
          <DocCard
            title={doc.data.title || formatTitle(doc.slug)}
            slug={doc.slug}
            description={doc.data.description}
            client={client}
          />
        ))}
      </div>

      <!-- Developer Reports Grid -->
      <div class="doc-grid hidden" data-category="developer">
        {sortedDeveloperDocs.map((doc) => (
          <DocCard
            title={doc.data.title || formatTitle(doc.slug)}
            slug={doc.slug}
            description={doc.data.description}
            client={client}
          />
        ))}
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .main {
    flex: 1;
  }

  .hero {
    margin-bottom: var(--space-12);
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes expandWidth {
    from {
      width: 0;
    }
    to {
      width: 60px;
    }
  }

  .hero-content {
    max-width: 720px;
  }

  .brand-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-8);
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0ms;
  }

  .brand-badge svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .page-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: var(--space-6);
    color: var(--color-text);
    line-height: 1.1;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 100ms;
  }

  .hero-divider {
    width: 60px;
    height: 4px;
    background: var(--color-primary);
    margin-bottom: var(--space-6);
    animation: expandWidth 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 200ms;
    width: 0;
    box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
  }

  .page-tagline {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-4);
    line-height: 1.4;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 300ms;
  }

  .page-description {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    line-height: 1.6;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 400ms;
  }

  @media (max-width: 640px) {
    .page-tagline {
      font-size: 1.125rem;
    }

    .page-description {
      font-size: 1rem;
    }

    .brand-badge {
      font-size: 0.75rem;
    }

    .hero-divider {
      width: 48px;
      height: 3px;
    }
  }

  .section-header {
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--color-border);
    opacity: 0;
    animation: slideUp 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 800ms;
  }

  .tabs-container {
    margin-bottom: var(--space-6);
    opacity: 0;
    animation: slideUp 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 850ms;
  }

  .tabs {
    display: flex;
    gap: var(--space-2);
    padding: var(--space-1);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    width: fit-content;
  }

  .tab {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    font-family: var(--font-sans);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    cursor: pointer;
    transition: all var(--transition-base);
    position: relative;
  }

  .tab svg {
    width: 16px;
    height: 16px;
    transition: all var(--transition-base);
  }

  .tab:hover {
    color: var(--color-text-secondary);
    background: var(--color-bg-deep);
  }

  .tab.active {
    background: var(--color-bg-deep);
    color: var(--color-text);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .tab.active svg {
    color: var(--color-primary);
  }

  .tab-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 20px;
    height: 20px;
    padding: 0 var(--space-2);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-muted);
    transition: all var(--transition-base);
  }

  .tab.active .tab-count {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }

  .hidden {
    display: none !important;
  }

  /* Keywords Table */
  .keywords-section {
    margin-bottom: var(--space-10);
  }

  .keywords-table-wrapper {
    overflow-x: auto;
    background: var(--color-bg-deep);
    border: 1px solid var(--color-border);
  }

  .keywords-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.875rem;
  }

  .keywords-table thead {
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
  }

  .keywords-table th {
    padding: var(--space-4);
    text-align: left;
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
  }

  .keywords-table tbody tr {
    border-bottom: 1px solid var(--color-border);
    transition: background var(--transition-fast);
  }

  .keywords-table tbody tr:hover {
    background: var(--color-bg);
  }

  .keywords-table td {
    padding: var(--space-4);
    color: var(--color-text-secondary);
  }

  .keyword-name {
    font-weight: 500;
    color: var(--color-text);
  }

  .badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .badge-na {
    background: var(--color-bg-secondary);
    color: var(--color-text-muted);
  }

  .badge-position {
    background: var(--color-primary-glow);
    color: var(--color-primary);
  }

  .badge-top3 {
    background: rgba(34, 197, 94, 0.15);
    color: #22c55e;
  }

  .badge-top10 {
    background: var(--color-primary-glow);
    color: var(--color-primary);
  }

  .badge-other {
    background: var(--color-bg-secondary);
    color: var(--color-text-muted);
  }

  .badge-easy {
    background: rgba(34, 197, 94, 0.15);
    color: #22c55e;
  }

  .badge-medium {
    background: rgba(251, 191, 36, 0.15);
    color: #fbbf24;
  }

  .badge-hard {
    background: rgba(239, 68, 68, 0.15);
    color: #ef4444;
  }

  .badge-critical {
    background: rgba(239, 68, 68, 0.15);
    color: #ef4444;
    font-weight: 700;
  }

  .badge-high {
    background: rgba(251, 191, 36, 0.15);
    color: #fbbf24;
  }

  .badge-local {
    background: var(--color-primary-glow);
    color: var(--color-primary);
  }

  .change-positive {
    color: #22c55e;
    font-weight: 600;
  }

  .change-negative {
    color: #ef4444;
    font-weight: 600;
  }

  .change-neutral {
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .tabs {
      width: 100%;
    }

    .tab {
      flex: 1;
      justify-content: center;
      font-size: 0.8125rem;
      padding: var(--space-2) var(--space-3);
    }

    .tab svg {
      width: 14px;
      height: 14px;
    }

    .keywords-table {
      font-size: 0.75rem;
    }

    .keywords-table th,
    .keywords-table td {
      padding: var(--space-2) var(--space-3);
    }
  }
</style>

<script>
  // Tab switching functionality
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.tab');
    const docGrids = document.querySelectorAll('.doc-grid');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const targetCategory = tab.getAttribute('data-tab');

        // Update active tab
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');

        // Show/hide corresponding doc grids
        docGrids.forEach(grid => {
          const gridCategory = grid.getAttribute('data-category');
          if (gridCategory === targetCategory) {
            grid.classList.remove('hidden');
          } else {
            grid.classList.add('hidden');
          }
        });
      });
    });
  });
