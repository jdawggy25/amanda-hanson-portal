---
/**
 * AdminLayout
 *
 * Layout wrapper for authenticated admin pages.
 * Includes sidebar navigation and handles authentication via Supabase Auth.
 */

import AdminNav from '../components/admin/AdminNav.astro';
import '../styles/global.css';
import { checkAuth } from '../lib/auth/supabase-auth';

interface Props {
  title: string;
  description?: string;
  requireAuth?: boolean;
}

const {
  title,
  description = 'Admin Dashboard - Comcreate SEO Reports',
  requireAuth = true
} = Astro.props;

// Authentication check using Supabase Auth
const auth = await checkAuth(Astro.cookies);

// Redirect to login if not authenticated
if (requireAuth && !auth.authenticated) {
  return Astro.redirect('/admin');
}

// Redirect with error if authenticated but not authorized (email not whitelisted)
if (requireAuth && auth.authenticated && !auth.authorized) {
  return Astro.redirect('/admin?error=unauthorized');
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a0a0a" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <title>{title} | Comcreate Admin</title>
  </head>
  <body class="admin-body">
    <!-- Technical Grid Background -->
    <div class="grid-background">
      <div class="grid-pattern"></div>
      <div class="grid-glow"></div>
    </div>

    <div class="admin-app">
      <AdminNav currentPath={Astro.url.pathname} />

      <main class="admin-main">
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  .admin-body {
    overflow-x: hidden;
  }

  .admin-app {
    display: flex;
    min-height: 100vh;
  }

  .admin-main {
    flex: 1;
    margin-left: 260px;
    padding: 2rem 3rem;
    min-height: 100vh;
    max-width: calc(100vw - 260px);
    overflow-x: auto;
    box-sizing: border-box;
  }

  /* Tablet: reduce sidebar space impact */
  @media (max-width: 1024px) {
    .admin-main {
      padding: 1.5rem 1.5rem;
    }
  }

  /* Mobile: sidebar becomes overlay */
  @media (max-width: 900px) {
    .admin-main {
      margin-left: 0;
      padding: 1rem;
      padding-top: 4.5rem; /* Space for hamburger toggle */
      max-width: 100vw;
      width: 100%;
    }
  }
</style>
