---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import DocCard from '../../components/DocCard.astro';
import { getProjectMapping } from '../../lib/jira/config';
import clientsConfig from '../../../clients.config.json';

// SSR - no prerender, fetch live data
export const prerender = false;

export async function getStaticPaths() {
  const CLIENTS = clientsConfig.clients.filter(c => c.enabled).map(c => c.id);
  return CLIENTS.map(client => ({
    params: { client },
  }));
}

const { client } = Astro.params;

// Get client config
const clientConfig = clientsConfig.clients.find(c => c.id === client);
if (!clientConfig || !clientConfig.enabled) {
  return Astro.redirect('/');
}

// Get Jira project mapping
const jiraMapping = getProjectMapping(client!);

// Hardcoded metrics from Ahrefs API (December 24, 2025)
const metricsData = {
  client: {
    name: clientConfig.name,
    website: clientConfig.website,
    reportDate: "December 2025"
  },
  overview: {
    domainRating: 32,
    ahrefsRank: 3006740,
    organicKeywords: 11,
    organicTraffic: 115,
    trafficValue: 90.93,
    performanceScore: 85,
    seoScore: 92,
    accessibilityScore: 88,
    bestPracticesScore: 90,
    status: "Growing organic traffic"
  },
  keywords: {
    total: 11,
    change: 2,
    changePercent: "+22%",
    ranking: [
      { keyword: "dr amanda hanson", position: 1, volume: 150, traffic: 57, difficulty: 2 },
      { keyword: "amanda hanson", position: 1, volume: 250, traffic: 45, difficulty: 3 },
      { keyword: "amanda hansen", position: 9, volume: 70, traffic: 2, difficulty: 0 },
      { keyword: "self love program", position: 10, volume: 10, traffic: 0, difficulty: 3 },
      { keyword: "amanda hanson wikipedia", position: 3, volume: 0, traffic: 0, difficulty: 0 }
    ]
  },
  traffic: {
    monthly: 115,
    organicValue: 90.93,
    change: -10,
    changePercent: "-8%",
    trend: [152, 96, 111, 123, 120, 122, 111, 167, 151, 123, 126, 116],
    history: []
  },
  backlinks: {
    total: 357,
    domains: 109,
    dofollow: 280,
    nofollow: 77,
    change: 15,
    changePercent: "+16%",
    topReferring: []
  },
  dataSource: {
    provider: "Ahrefs API",
    lastUpdated: "2025-12-24",
    cacheAge: "Live data"
  }
};

// Get all docs for this client
const allDocs = await getCollection('docs');

// Get docs from client's docs/ directory
const clientCategoryDocs = allDocs.filter(doc => doc.slug.startsWith(`${client}/docs/`));

// Sort docs alphabetically by slug
const sortedClientDocs = clientCategoryDocs.sort((a, b) => a.slug.localeCompare(b.slug));

// Helper to extract title from slug
function formatTitle(slug: string): string {
  const withoutClient = slug.replace(`${client}/docs/`, '');
  return withoutClient
    .replace(/_/g, ' ')
    .replace(/-/g, ' ')
    .replace(/\b\w/g, c => c.toUpperCase());
}

const { keywords, traffic, backlinks } = metricsData;
const clientName = metricsData.client.name;
const cacheAge = metricsData.dataSource.cacheAge;
---

<BaseLayout title={`${clientName} SEO Reports`}>
  <main class="main">
    <div class="container">
      <header class="hero">
        <div class="hero-content">
          <div class="brand-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 16v-4"></path>
              <path d="M12 8h.01"></path>
            </svg>
            Powered by Comcreate
          </div>
          <h1 class="page-title">{clientName} SEO Reports</h1>
          <div class="hero-divider"></div>
          <p class="page-tagline">
            Data-driven insights. Actionable strategies. Real results.
          </p>
          <p class="page-description">
            Comprehensive SEO analysis and recommendations designed to ignite your digital growth.
          </p>
          {cacheAge && (
            <p class="data-freshness">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
              Data updated {cacheAge}
            </p>
          )}
        </div>
      </header>

      <!-- Stats Grid -->
      <div class="stats-grid">
        <div class="stat-card animate-fade-in">
          <div class="stat-label">Keywords Tracked</div>
          <div class="stat-value">{keywords.total}</div>
          <div class={`stat-change ${typeof keywords.change === 'number' && keywords.change >= 0 ? 'positive' : 'negative'}`}>
            {keywords.changePercent} from last month
          </div>
        </div>
        <div class="stat-card animate-fade-in" style="animation-delay: 50ms">
          <div class="stat-label">Monthly Traffic</div>
          <div class="stat-value">{typeof traffic.monthly === 'number' ? (traffic.monthly >= 1000 ? `${(traffic.monthly / 1000).toFixed(1)}k` : traffic.monthly) : traffic.monthly}</div>
          <div class={`stat-change ${typeof traffic.change === 'number' && traffic.change >= 0 ? 'positive' : 'negative'}`}>
            {traffic.changePercent} from last month
          </div>
        </div>
        <div class="stat-card animate-fade-in" style="animation-delay: 100ms">
          <div class="stat-label">Backlinks</div>
          <div class="stat-value">{backlinks.total}</div>
          <div class={`stat-change ${typeof backlinks.change === 'number' && backlinks.change >= 0 ? 'positive' : 'negative'}`}>
            {backlinks.changePercent} from last month
          </div>
        </div>
        <div class="stat-card animate-fade-in" style="animation-delay: 150ms">
          <div class="stat-label">Domain Rating</div>
          <div class="stat-value">{metricsData.overview.domainRating}</div>
          <div class="stat-change">
            {backlinks.domains} referring domains
          </div>
        </div>
      </div>

      <!-- Traffic Trend Chart -->
      <div class="chart-section">
        <div class="section-header">
          <span class="label-mono-accent">12-Month Traffic Trend</span>
        </div>
        <div class="trend-chart" id="traffic-trend"
             data-values={JSON.stringify(traffic.trend)}
             data-labels='["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"]'>
        </div>
      </div>

      <!-- Keywords Ranking Table -->
      {keywords.ranking && keywords.ranking.length > 0 && (
        <div class="keywords-section">
          <div class="section-header">
            <span class="label-mono-accent">Top Keywords</span>
          </div>
          <div class="keywords-table-wrapper">
            <table class="keywords-table">
              <thead>
                <tr>
                  <th>Keyword</th>
                  <th>Position</th>
                  <th>Volume</th>
                  <th>Traffic</th>
                  <th>Difficulty</th>
                </tr>
              </thead>
              <tbody>
                {keywords.ranking.slice(0, 15).map((kw) => (
                  <tr>
                    <td class="keyword-name">{kw.keyword}</td>
                    <td class="keyword-position">
                      <span class={`badge badge-position ${kw.position <= 3 ? 'badge-top3' : kw.position <= 10 ? 'badge-top10' : 'badge-other'}`}>
                        #{kw.position}
                      </span>
                    </td>
                    <td class="keyword-volume">{kw.volume.toLocaleString()}</td>
                    <td class="keyword-traffic">{kw.traffic.toLocaleString()}</td>
                    <td class="keyword-difficulty">
                      {kw.difficulty !== null ? (
                        <span class={`badge ${kw.difficulty <= 30 ? 'badge-easy' : kw.difficulty <= 60 ? 'badge-medium' : 'badge-hard'}`}>
                          {kw.difficulty}
                        </span>
                      ) : (
                        <span class="badge badge-na">N/A</span>
                      )}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      )}

      <!-- Reports Section -->
      <div class="section-header">
        <span class="label-mono-accent">Available Reports</span>
      </div>

      <!-- Reports Grid -->
      <div class="doc-grid">
        <!-- Jira Sprint Dashboard - Live Integration -->
        {jiraMapping && jiraMapping.projectId && (
          <a href={`/${client}/dev/sprint-dashboard`} class="jira-card">
            <div class="jira-card-header">
              <div class="jira-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="7" height="7"></rect>
                  <rect x="14" y="3" width="7" height="7"></rect>
                  <rect x="14" y="14" width="7" height="7"></rect>
                  <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
              </div>
              <span class="live-badge">
                <span class="live-dot"></span>
                LIVE
              </span>
            </div>
            <h3 class="jira-card-title">Sprint Dashboard</h3>
            <p class="jira-card-description">
              Full sprint dashboard with story points, epics, activity feed, and filtering.
            </p>
            <div class="jira-card-footer">
              <span class="jira-project-key">{jiraMapping.projectKey}</span>
              <span class="jira-arrow">→</span>
            </div>
          </a>
        )}
        <!-- SEO Report - Full Analysis -->
        <a href={`/${client}/seo-report`} class="jira-card">
          <div class="jira-card-header">
            <div class="jira-icon" style="background: rgba(34, 197, 94, 0.15); color: #22c55e;">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 3v18h18"></path>
                <path d="m19 9-5 5-4-4-3 3"></path>
              </svg>
            </div>
            <span class="live-badge">
              <span class="live-dot"></span>
              LIVE
            </span>
          </div>
          <h3 class="jira-card-title">Full SEO Report</h3>
          <p class="jira-card-description">
            Comprehensive SEO analysis with historical charts, competitor data, and 3-month strategy.
          </p>
          <div class="jira-card-footer">
            <span class="jira-project-key">AHREFS</span>
            <span class="jira-arrow">→</span>
          </div>
        </a>
        <!-- SEO Strategy - Keyword Attack Plan -->
        <a href={`/${client}/seo-strategy`} class="jira-card">
          <div class="jira-card-header">
            <div class="jira-icon" style="background: rgba(168, 85, 247, 0.15); color: #a855f7;">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
              </svg>
            </div>
            <span class="live-badge" style="background: rgba(168, 85, 247, 0.15); border-color: rgba(168, 85, 247, 0.3); color: #a855f7;">
              <span class="live-dot" style="background: #a855f7;"></span>
              STRATEGY
            </span>
          </div>
          <h3 class="jira-card-title">SEO Attack Strategy</h3>
          <p class="jira-card-description">
            Keyword targets, directory submissions, backlink strategies, and domains to purchase.
          </p>
          <div class="jira-card-footer">
            <span class="jira-project-key" style="background: rgba(168, 85, 247, 0.15); color: #a855f7;">GROWTH</span>
            <span class="jira-arrow">→</span>
          </div>
        </a>
        {sortedClientDocs.map((doc) => (
          <DocCard
            title={doc.data.title || formatTitle(doc.slug)}
            slug={doc.slug}
            description={doc.data.description}
            client={client}
          />
        ))}
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .main {
    flex: 1;
  }

  .hero {
    margin-bottom: var(--space-12);
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes expandWidth {
    from {
      width: 0;
    }
    to {
      width: 60px;
    }
  }

  .hero-content {
    max-width: 720px;
  }

  .brand-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-8);
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0ms;
  }

  .brand-badge svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .page-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: var(--space-6);
    color: var(--color-text);
    line-height: 1.1;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 100ms;
  }

  .hero-divider {
    width: 60px;
    height: 4px;
    background: var(--color-primary);
    margin-bottom: var(--space-6);
    animation: expandWidth 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 200ms;
    width: 0;
    box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
  }

  .page-tagline {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-4);
    line-height: 1.4;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 300ms;
  }

  .page-description {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    line-height: 1.6;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 400ms;
  }

  .data-freshness {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    margin-top: var(--space-4);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-text-muted);
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 500ms;
  }

  .data-freshness svg {
    color: var(--color-primary);
  }

  @media (max-width: 640px) {
    .page-tagline {
      font-size: 1.125rem;
    }

    .page-description {
      font-size: 1rem;
    }

    .brand-badge {
      font-size: 0.75rem;
    }

    .hero-divider {
      width: 48px;
      height: 3px;
    }
  }

  .section-header {
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--color-border);
    opacity: 0;
    animation: slideUp 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 800ms;
  }

  /* Keywords Table */
  .keywords-section {
    margin-bottom: var(--space-10);
  }

  .keywords-table-wrapper {
    overflow-x: auto;
    background: var(--color-bg-deep);
    border: 1px solid var(--color-border);
  }

  .keywords-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.875rem;
  }

  .keywords-table thead {
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
  }

  .keywords-table th {
    padding: var(--space-4);
    text-align: left;
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
  }

  .keywords-table tbody tr {
    border-bottom: 1px solid var(--color-border);
    transition: background var(--transition-fast);
  }

  .keywords-table tbody tr:hover {
    background: var(--color-bg);
  }

  .keywords-table td {
    padding: var(--space-4);
    color: var(--color-text-secondary);
  }

  .keyword-name {
    font-weight: 500;
    color: var(--color-text);
  }

  .badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .badge-na {
    background: var(--color-bg-secondary);
    color: var(--color-text-muted);
  }

  .badge-position {
    background: var(--color-primary-glow);
    color: var(--color-primary);
  }

  .badge-top3 {
    background: rgba(34, 197, 94, 0.15);
    color: #22c55e;
  }

  .badge-top10 {
    background: var(--color-primary-glow);
    color: var(--color-primary);
  }

  .badge-other {
    background: var(--color-bg-secondary);
    color: var(--color-text-muted);
  }

  .badge-easy {
    background: rgba(34, 197, 94, 0.15);
    color: #22c55e;
  }

  .badge-medium {
    background: rgba(251, 191, 36, 0.15);
    color: #fbbf24;
  }

  .badge-hard {
    background: rgba(239, 68, 68, 0.15);
    color: #ef4444;
  }

  @media (max-width: 640px) {
    .keywords-table {
      font-size: 0.75rem;
    }

    .keywords-table th,
    .keywords-table td {
      padding: var(--space-2) var(--space-3);
    }
  }

  /* Jira Card Styles */
  .jira-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-5);
    background: linear-gradient(135deg, var(--color-bg-deep) 0%, var(--color-bg-secondary) 100%);
    border: 1px solid var(--color-primary);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
  }

  .jira-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary), #22c55e);
  }

  .jira-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 0 20px var(--color-primary-glow), 0 4px 12px rgba(0, 0, 0, 0.15);
    transform: translateY(-2px);
  }

  .jira-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-3);
  }

  .jira-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--color-primary-glow);
    border-radius: var(--radius-md);
    color: var(--color-primary);
  }

  .live-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-1) var(--space-3);
    background: rgba(34, 197, 94, 0.15);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: var(--radius-full);
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: #22c55e;
  }

  .live-dot {
    width: 6px;
    height: 6px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .jira-card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .jira-card-description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
    margin-bottom: var(--space-4);
    flex-grow: 1;
  }

  .jira-card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-3);
    border-top: 1px solid var(--color-border);
  }

  .jira-project-key {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary);
    background: var(--color-primary-glow);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
  }

  .jira-arrow {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    transition: transform var(--transition-fast), color var(--transition-fast);
  }

  .jira-card:hover .jira-arrow {
    transform: translateX(4px);
    color: var(--color-primary);
  }

  /* Chart Section */
  .chart-section {
    margin-bottom: var(--space-10);
  }

  .trend-chart {
    background: var(--color-bg-deep);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    min-height: 250px;
  }
</style>

<script>
  // Load ApexCharts for dashboard
  const script = document.createElement('script');
  script.src = 'https://cdn.jsdelivr.net/npm/apexcharts@3.44.0/dist/apexcharts.min.js';
  script.onload = initDashboardChart;
  document.head.appendChild(script);

  function initDashboardChart() {
    const chartEl = document.getElementById('traffic-trend');
    if (!chartEl || !window.ApexCharts) return;

    const values = JSON.parse(chartEl.getAttribute('data-values') || '[]');
    const labels = JSON.parse(chartEl.getAttribute('data-labels') || '[]');

    new window.ApexCharts(chartEl, {
      series: [{ name: 'Traffic', data: values }],
      chart: {
        type: 'area',
        height: 220,
        background: 'transparent',
        toolbar: { show: false },
        animations: { enabled: true, easing: 'easeinout', speed: 800 },
        zoom: { enabled: false }
      },
      dataLabels: { enabled: false },
      stroke: { curve: 'smooth', width: 3 },
      fill: {
        type: 'gradient',
        gradient: {
          shadeIntensity: 1,
          opacityFrom: 0.45,
          opacityTo: 0.05,
          stops: [0, 100]
        }
      },
      markers: { size: 0, hover: { size: 5 } },
      xaxis: {
        categories: labels,
        labels: { style: { colors: '#94a3b8', fontSize: '11px' } },
        axisBorder: { show: false },
        axisTicks: { show: false }
      },
      yaxis: {
        labels: {
          style: { colors: '#94a3b8', fontSize: '11px' },
          formatter: function(val) { return Math.round(val); }
        }
      },
      grid: { borderColor: '#1e293b', strokeDashArray: 4 },
      tooltip: {
        theme: 'dark',
        y: { formatter: function(val) { return val + ' visits'; } }
      },
      colors: ['#3b82f6']
    }).render();
  }
</script>
