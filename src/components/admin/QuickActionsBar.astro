---
/**
 * QuickActionsBar Component
 *
 * Bulk action buttons: Collect All Metrics, Generate All Reports, Refresh Health Scores
 */

interface Props {
  currentMonth: string;
}

const { currentMonth } = Astro.props;
---

<div class="quick-actions-bar">
  <div class="actions-group">
    <button id="collectAllMetrics" class="btn-action">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="2" y1="12" x2="22" y2="12"></line>
        <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
      </svg>
      <span>Collect Metrics</span>
    </button>

    <button id="generateAllReports" class="btn-action btn-success">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
        <polyline points="14 2 14 8 20 8"></polyline>
        <line x1="16" y1="13" x2="8" y2="13"></line>
        <line x1="16" y1="17" x2="8" y2="17"></line>
      </svg>
      <span>Generate Reports</span>
    </button>

    <button id="refreshHealthScores" class="btn-action">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="23 4 23 10 17 10"></polyline>
        <polyline points="1 20 1 14 7 14"></polyline>
        <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
      </svg>
      <span>Refresh Scores</span>
    </button>
  </div>

  <div class="month-selector">
    <label for="reportMonth">Month:</label>
    <input type="month" id="reportMonth" value={currentMonth} />
  </div>
</div>

<style>
  .quick-actions-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: rgba(20, 20, 20, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .actions-group {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .btn-action {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    color: white;
    font-size: 0.85rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-action:hover:not(:disabled) {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-1px);
  }

  .btn-action:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .btn-action.btn-success {
    background: rgba(16, 185, 129, 0.2);
    border-color: rgba(16, 185, 129, 0.4);
    color: #10b981;
  }

  .btn-action.btn-success:hover:not(:disabled) {
    background: rgba(16, 185, 129, 0.3);
  }

  .btn-action.loading {
    pointer-events: none;
  }

  .btn-action.loading svg {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .month-selector {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .month-selector label {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .month-selector input[type="month"] {
    padding: 0.5rem 0.75rem;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 6px;
    color: white;
    font-size: 0.85rem;
  }

  .month-selector input[type="month"]:focus {
    outline: none;
    border-color: #667eea;
  }

  @media (max-width: 900px) {
    .quick-actions-bar {
      flex-direction: column;
      align-items: stretch;
      gap: 0.75rem;
    }

    .actions-group {
      justify-content: flex-start;
    }

    .month-selector {
      justify-content: flex-start;
    }
  }

  @media (max-width: 600px) {
    .quick-actions-bar {
      padding: 0.75rem 1rem;
    }

    .actions-group {
      flex-direction: column;
      width: 100%;
    }

    .btn-action {
      width: 100%;
      justify-content: center;
    }

    .btn-action span {
      display: inline;
    }
  }
</style>

<script>
  // Collect metrics handler
  document.getElementById('collectAllMetrics')?.addEventListener('click', async (e) => {
    const btn = e.currentTarget as HTMLButtonElement;
    btn.classList.add('loading');
    btn.disabled = true;

    try {
      const response = await fetch('/admin/api/collect-metrics', { method: 'POST' });
      const data = await response.json();

      if (data.success) {
        showNotification('success', `Metrics collected for ${data.clientsUpdated} clients.`);
        // Refresh the page to show new data
        setTimeout(() => window.location.reload(), 1500);
      } else {
        showNotification('error', `Error: ${data.error || data.message}`);
      }
    } catch (error) {
      showNotification('error', 'Failed to collect metrics.');
      console.error(error);
    } finally {
      btn.classList.remove('loading');
      btn.disabled = false;
    }
  });

  // Generate reports handler
  document.getElementById('generateAllReports')?.addEventListener('click', async (e) => {
    const btn = e.currentTarget as HTMLButtonElement;
    const month = (document.getElementById('reportMonth') as HTMLInputElement)?.value;

    btn.classList.add('loading');
    btn.disabled = true;

    try {
      const response = await fetch('/admin/api/generate-reports', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ month })
      });
      const data = await response.json();

      if (data.success) {
        showNotification('success', `Generated ${data.reportsGenerated} reports.`);
      } else {
        showNotification('error', `Error: ${data.error || data.message}`);
      }
    } catch (error) {
      showNotification('error', 'Failed to generate reports.');
      console.error(error);
    } finally {
      btn.classList.remove('loading');
      btn.disabled = false;
    }
  });

  // Refresh health scores handler
  document.getElementById('refreshHealthScores')?.addEventListener('click', async (e) => {
    const btn = e.currentTarget as HTMLButtonElement;
    btn.classList.add('loading');
    btn.disabled = true;

    try {
      // Just reload the page to refresh all data
      window.location.reload();
    } catch (error) {
      showNotification('error', 'Failed to refresh.');
      btn.classList.remove('loading');
      btn.disabled = false;
    }
  });

  // Simple notification helper
  function showNotification(type: 'success' | 'error', message: string) {
    const existing = document.querySelector('.notification');
    if (existing) existing.remove();

    const notification = document.createElement('div');
    notification.className = `notification ${type}`;
    notification.textContent = message;
    notification.style.cssText = `
      position: fixed;
      top: 1rem;
      right: 1rem;
      padding: 1rem 1.5rem;
      border-radius: 8px;
      font-size: 0.9rem;
      z-index: 1000;
      animation: slideIn 0.3s ease-out;
      ${type === 'success'
        ? 'background: rgba(16, 185, 129, 0.9); color: white;'
        : 'background: rgba(239, 68, 68, 0.9); color: white;'}
    `;

    document.body.appendChild(notification);

    setTimeout(() => {
      notification.style.opacity = '0';
      notification.style.transition = 'opacity 0.3s';
      setTimeout(() => notification.remove(), 300);
    }, 3000);
  }
</script>
