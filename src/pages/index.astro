---
import BaseLayout from '../layouts/BaseLayout.astro';
import clientsConfig from '../../clients.config.json';
import { fetchClientMetrics, type ClientMetrics } from '../lib/metrics';

export const prerender = false; // SSR for live metrics

interface ClientConfig {
  id: string;
  name: string;
  website: string;
  enabled: boolean;
  password: string;
}

const clients = clientsConfig.clients.filter((c: ClientConfig) => c.enabled) as ClientConfig[];

// Fetch metrics for all clients in parallel
const metricsMap = new Map<string, ClientMetrics | null>();
await Promise.all(
  clients.map(async (client) => {
    try {
      const metrics = await fetchClientMetrics(client.name, client.website);
      metricsMap.set(client.id, metrics);
    } catch (error) {
      console.error(`Failed to fetch metrics for ${client.id}:`, error);
      metricsMap.set(client.id, null);
    }
  })
);

// Helper to format traffic
function formatTraffic(value: number): string {
  if (value >= 1000) {
    return `${(value / 1000).toFixed(1)}k`;
  }
  return value.toString();
}
---

<BaseLayout title="Comcreate SEO Reports - Client Dashboard">
  <main class="main">
    <div class="container">
      <header class="hero">
        <div class="hero-content">
          <div class="brand-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 16v-4"></path>
              <path d="M12 8h.01"></path>
            </svg>
            Comcreate
          </div>
          <h1 class="page-title">SEO Report Dashboard</h1>
          <div class="hero-divider"></div>
          <p class="page-description">
            Select a client to view their SEO performance reports.
          </p>
        </div>
      </header>

      <div class="clients-grid">
        {clients.map((client, index) => {
          const metrics = metricsMap.get(client.id);
          return (
            <button
              class="client-card"
              data-client-id={client.id}
              data-client-password={client.password}
              style={`animation-delay: ${100 + index * 50}ms`}
            >
              <div class="card-glow"></div>
              <div class="card-content">
                
                <h2 class="client-name">{client.name}</h2>
                <p class="client-website">{client.website}</p>
                {metrics && (
                  <div class="client-metrics">
                    <div class="metric">
                      <span class="metric-value">{metrics.overview.domainRating}</span>
                      <span class="metric-label">DR</span>
                    </div>
                    <div class="metric">
                      <span class="metric-value">{formatTraffic(metrics.traffic.monthly)}</span>
                      <span class="metric-label">Traffic</span>
                    </div>
                    <div class="metric">
                      <span class="metric-value">{metrics.backlinks.domains}</span>
                      <span class="metric-label">Ref Domains</span>
                    </div>
                  </div>
                )}
                {metrics?.dataSource.cacheAge && (
                  <div class="cache-info">
                    <span class="cache-age">Updated {metrics.dataSource.cacheAge}</span>
                  </div>
                )}
                <div class="card-action">
                  <span>View Report</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14"></path>
                    <path d="m12 5 7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </button>
          );
        })}
      </div>
    </div>
  </main>

  <!-- Password Modal -->
  <div id="passwordModal" class="modal-overlay">
    <div class="modal">
      <button class="modal-close" id="modalClose">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M18 6 6 18"></path>
          <path d="m6 6 12 12"></path>
        </svg>
      </button>
      <div class="modal-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
        </svg>
      </div>
      <h3 class="modal-title">Enter Password</h3>
      <p class="modal-subtitle" id="modalClientName">Client Name</p>
      <form id="passwordForm" class="modal-form">
        <input
          type="password"
          id="passwordInput"
          class="modal-input"
          placeholder="Enter access code"
          autocomplete="off"
          required
        />
        <div id="errorMessage" class="error-message"></div>
        <button type="submit" class="modal-submit">
          <span class="button-text">Access Report</span>
        </button>
      </form>
    </div>
  </div>
</BaseLayout>

<script>
  interface ClientData {
    id: string;
    password: string;
  }

  const modal = document.getElementById('passwordModal') as HTMLDivElement;
  const modalClose = document.getElementById('modalClose') as HTMLButtonElement;
  const modalClientName = document.getElementById('modalClientName') as HTMLParagraphElement;
  const passwordForm = document.getElementById('passwordForm') as HTMLFormElement;
  const passwordInput = document.getElementById('passwordInput') as HTMLInputElement;
  const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;

  let currentClient: ClientData | null = null;

  // Handle client card clicks
  document.querySelectorAll('.client-card').forEach(card => {
    card.addEventListener('click', () => {
      const clientId = card.getAttribute('data-client-id');
      const clientPassword = card.getAttribute('data-client-password');
      const clientName = card.querySelector('.client-name')?.textContent || '';

      currentClient = { id: clientId!, password: clientPassword! };
      modalClientName.textContent = clientName;
      passwordInput.value = '';
      errorMessage.textContent = '';
      passwordInput.classList.remove('error');
      modal.classList.add('active');
      passwordInput.focus();
    });
  });

  // Close modal
  function closeModal() {
    modal.classList.remove('active');
    currentClient = null;
  }

  modalClose.addEventListener('click', closeModal);
  modal.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeModal();
  });

  // Handle form submit
  passwordForm.addEventListener('submit', (e) => {
    e.preventDefault();

    if (!currentClient) return;

    const enteredPassword = passwordInput.value.trim().toLowerCase();

    if (enteredPassword === currentClient.password.toLowerCase()) {
      // Success - redirect
      const button = passwordForm.querySelector('.modal-submit') as HTMLButtonElement;
      button.classList.add('loading');
      button.querySelector('.button-text')!.textContent = 'Redirecting...';

      setTimeout(() => {
        window.location.href = `/${currentClient!.id}`;
      }, 400);
    } else {
      // Error
      passwordInput.classList.add('error');
      errorMessage.textContent = 'Invalid password. Please try again.';
      passwordInput.classList.add('shake');
      setTimeout(() => {
        passwordInput.classList.remove('shake');
      }, 500);
    }
  });

  // Clear error on input
  passwordInput.addEventListener('input', () => {
    passwordInput.classList.remove('error');
    errorMessage.textContent = '';
  });
</script>

<style>
  .main {
    flex: 1;
    padding: var(--space-8) 0;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes expandWidth {
    from { width: 0; }
    to { width: 60px; }
  }

  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-8px); }
    75% { transform: translateX(8px); }
  }

  .hero {
    margin-bottom: var(--space-10);
    text-align: center;
  }

  .hero-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .brand-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-6);
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  .brand-badge svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .page-title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--space-6);
    color: var(--color-text);
    line-height: 1.1;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 50ms;
  }

  .hero-divider {
    width: 60px;
    height: 4px;
    background: var(--color-primary);
    margin: 0 auto var(--space-6);
    animation: expandWidth 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 100ms;
    width: 0;
    box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
  }

  .page-description {
    color: var(--color-text-secondary);
    font-size: 1rem;
    line-height: 1.6;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 150ms;
  }

  /* Clients Grid */
  .clients-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .client-card {
    position: relative;
    background: var(--color-bg-deep);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    cursor: pointer;
    text-align: left;
    font-family: inherit;
    color: inherit;
    opacity: 0;
    animation: slideUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    transition: all var(--transition-base);
  }

  .client-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), 0 0 30px rgba(59, 130, 246, 0.1);
  }

  .client-card .card-glow {
    position: absolute;
    inset: 0;
    opacity: 0;
    background: radial-gradient(
      ellipse 80% 50% at 50% 0%,
      rgba(59, 130, 246, 0.15) 0%,
      transparent 70%
    );
    pointer-events: none;
    transition: opacity var(--transition-base);
  }

  .client-card:hover .card-glow {
    opacity: 1;
  }

  .client-card .card-content {
    padding: var(--space-6);
    position: relative;
    z-index: 1;
  }

  .client-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-primary);
    margin-bottom: var(--space-4);
  }

  .client-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }

  .client-website {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    margin-bottom: var(--space-4);
  }

  .client-metrics {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-4) 0;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-4);
  }

  .metric {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .metric-value {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    font-family: var(--font-mono);
  }

  .metric-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cache-info {
    margin-bottom: var(--space-3);
  }

  .cache-age {
    font-size: 0.6875rem;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .card-action {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-primary);
    font-size: 0.875rem;
    font-weight: 500;
    transition: gap var(--transition-fast);
  }

  .client-card:hover .card-action {
    gap: var(--space-3);
  }

  /* Modal */
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s ease;
  }

  .modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .modal {
    position: relative;
    background: var(--color-bg-deep);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-8);
    width: 90%;
    max-width: 400px;
    text-align: center;
    transform: scale(0.95);
    transition: transform 0.2s ease;
  }

  .modal-overlay.active .modal {
    transform: scale(1);
  }

  .modal-close {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    background: none;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    padding: var(--space-2);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .modal-close:hover {
    color: var(--color-text);
    background: var(--color-bg-elevated);
  }

  .modal-icon {
    width: 56px;
    height: 56px;
    margin: 0 auto var(--space-4);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-elevated);
    border: 2px solid var(--color-border);
    border-radius: 50%;
    color: var(--color-primary);
  }

  .modal-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }

  .modal-subtitle {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin-bottom: var(--space-6);
  }

  .modal-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .modal-input {
    width: 100%;
    padding: var(--space-4);
    background: var(--color-bg);
    border: 2px solid var(--color-border);
    color: var(--color-text);
    font-size: 1rem;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    font-family: var(--font-mono);
    text-align: center;
    letter-spacing: 0.1em;
  }

  .modal-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .modal-input.error {
    border-color: #ef4444;
  }

  .modal-input.shake {
    animation: shake 0.5s ease-in-out;
  }

  .error-message {
    min-height: 20px;
    color: #ef4444;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .modal-submit {
    width: 100%;
    padding: var(--space-4);
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-base);
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .modal-submit:hover {
    background: var(--color-primary-soft);
  }

  .modal-submit.loading {
    opacity: 0.8;
    cursor: wait;
  }

  @media (max-width: 640px) {
    .clients-grid {
      grid-template-columns: 1fr;
    }

    .client-metrics {
      flex-wrap: wrap;
    }

    .modal {
      padding: var(--space-6);
    }
  }
</style>
